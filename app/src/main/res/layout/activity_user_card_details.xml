<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/heading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:weightSum="2"
    app:layout_constraintTop_toTopOf="parent">

</LinearLayout>
<androidx.cardview.widget.CardView
android:id="@+id/buyerdetailsincard"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="30dp"
app:cardCornerRadius="12dp"
android:elevation="0dp"
app:cardElevation="5dp"
android:layout_marginBottom="10dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp">

<LinearLayout
    android:id="@+id/parentlayout"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background="@color/colorRecyclerViewCards"
    android:orientation = "vertical">

    <TextView
        android:id="@+id/ownernamedetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:textColor="@color/green"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_medium"
        android:text="User Name"/>


        <TextView
        android:id="@+id/userphonenodetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:drawablePadding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/green"
        android:drawableLeft="@drawable/phoneno"
        android:textIsSelectable="true"
        android:fontFamily="@font/poppins_light"
        android:text="User Phoneno" />

    <TextView
        android:id="@+id/useremaildetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/green"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/email"
        android:textSize="14sp"
        android:drawablePadding="12dp"
        android:textIsSelectable="true"
        android:fontFamily="@font/poppins_light"
        android:text="User Email"/>

    <TextView
        android:id="@+id/useraddress1details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop ="12dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textIsSelectable="true"
        android:drawableLeft="@drawable/ic_business"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppins_light"
        android:text="User Address"/>
    <TextView
        android:id="@+id/userbusinesstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop ="0dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textIsSelectable="true"
        android:drawableLeft="@drawable/ic_baseline_business_24"
        android:drawablePadding="12dp"
        android:fontFamily="@font/poppins_light"
        android:text="Business Type"/>
    <TextView
        android:id="@+id/upidid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop ="0dp"
        android:layout_marginBottom="16dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:textIsSelectable="true"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
        android:fontFamily="@font/poppins_light"
        android:text="Upi Id"/>
</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
